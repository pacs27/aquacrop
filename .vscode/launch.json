    "version": "0.2.0",
    "configurations": [
        {
            "name": "WINDOWS Python: Current File",
            "python": "${workspaceFolder}/venv/Scripts/python",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "MAC: ALL TESTS",
            "python": "${workspaceFolder}/venv/bin/python",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
              "DEVELOPMENT": "TRUE"
            }
          },
        {
            "name": "MAC: Current File",
            "python": "${workspaceFolder}/venv/bin/python3",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "sim1",
            "python": "${workspaceFolder}/venv/bin/python3",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/aquacrop_wrapper/main.py",
            "args": [
                "-sstart=2020/04/01",
                "-send=2040/02/02",
                "--test_mode",
                "-stype=Loam",
                "-crop=Wheat",
                "-pdate=11/15",
                "-iwc=FC",
                "-imethod=rainfed",
                "--simulation_types=normal_simulation"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}